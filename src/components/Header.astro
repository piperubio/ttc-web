---
const navItems = [
  { name: "Inicio", link: "#home" },
  { name: "Servicios", link: "#services" },
  { name: "Nosotros", link: "#team" },
  { name: "Contacto", link: "#contact" },
];
---

<header
  class="fixed top-0 left-0 w-full z-50 bg-white shadow-md transition-all duration-300"
  id="header"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 md:h-20">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <a href="/" class="flex items-center">
          <img
            class="hidden md:block h-12 w-auto"
            src="/img/logo.webp"
            alt="Tributo Tecnológico Logo"
          >
          <img
            class="block md:hidden h-10 w-auto"
            src="/img/logo-t.webp"
            alt="Tributo Tecnológico Logo"
          >
        </a>
      </div>

      <!-- Desktop Menu -->
      <nav class="hidden md:flex space-x-8">
        {
          navItems.map((item) => (
            <a
              href={item.link}
              class="text-gray-700 hover:text-[#cc3333] px-3 py-2 rounded-md text-sm font-medium transition-colors"
            >
              {item.name}
            </a>
          ))
        }
      </nav>

      <!-- Mobile Menu Button -->
      <div class="flex items-center md:hidden">
        <button
          type="button"
          class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-[#cc3333] hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-[#cc3333]"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            class="block h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            ></path>
          </svg>
          <svg
            class="hidden h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"
            ></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="md:hidden hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white shadow-lg">
      {
        navItems.map((item) => (
          <a
            href={item.link}
            class="text-gray-700 hover:text-[#cc3333] block px-3 py-2 rounded-md text-base font-medium"
          >
            {item.name}
          </a>
        ))
      }
    </div>
  </div>
</header>

<script>
  const btn = document.querySelector("button.mobile-menu-button");
  const menu = document.querySelector("#mobile-menu");
  const openIcon = btn?.querySelector("svg:first-child");
  const closeIcon = btn?.querySelector("svg:last-child");

  btn?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
    openIcon?.classList.toggle("hidden");
    closeIcon?.classList.toggle("hidden");
  });
</script>
